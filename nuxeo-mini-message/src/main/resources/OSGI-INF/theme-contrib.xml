<?xml version="1.0"?>
<component name="org.nuxeo.ecm.social.mini.message.theme">

  <!-- mapping between theme pages and resources -->
  <extension target="org.nuxeo.theme.styling.service" point="pages">

    <themePage name="*">
      <styles append="true">
        <style>mini_messages</style>
      </styles>
    </themePage>

  </extension>

  <!-- CSS path declaration -->
  <extension target="org.nuxeo.theme.styling.service" point="styles">

    <style name="mini_messages">
      <src>themes/css/mini_messages.css</src>
    </style>

  </extension>

</component>
