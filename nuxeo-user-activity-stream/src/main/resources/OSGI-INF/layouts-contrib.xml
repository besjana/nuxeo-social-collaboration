<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.social.user.activity.stream.layouts">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgettypes">
    <widgetType name="summary_user_activity_stream">
      <configuration>
        <sinceVersion>5.4.3</sinceVersion>
        <title>User Activity Stream Summary</title>
        <description>
          <p>This widgets displays the user activity stream
            through the useractivitystream OpenSocial gadget</p>
        </description>
        <categories>
          <category>summary</category>
        </categories>
        <supportedModes>
          <mode>view</mode>
        </supportedModes>
        <!-- no configurable properties -->
      </configuration>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/user_activity_stream_widget_template.xhtml
      </property>
    </widgetType>
  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgets">

    <widget name="summary_user_activity_stream" type="summary_user_activity_stream" />

    <widget name="listing_user_activity" type="template">
      <labels>
        <label mode="any" />
      </labels>
      <fields>
        <field>data.message</field>
        <field>data.publishedDate</field>
      </fields>
      <properties mode="any">
        <property name="template">/widgets/listing_user_activity_widget_template.xhtml</property>
      </properties>
      <widgetModes>
        <mode value="edit">hidden</mode>
      </widgetModes>
    </widget>

  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="listing_user_activity_stream">
      <templates>
        <template mode="any">/layouts/layout_listing_template.xhtml</template>
      </templates>
      <columns>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">false</property>
          </properties>
          <widget>listing_user_activity</widget>
        </column>
      </columns>
    </layout>

  </extension>

</component>
