<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.social.user.activity.stream.contentviews">

  <extension target="org.nuxeo.ecm.platform.ui.web.ContentViewService"
      point="contentViews">

    <contentView name="activity_stream_for_user">

      <title>label.contentview.user.activity.stream</title>
      <translateTitle>true</translateTitle>
      <showTitle>false</showTitle>

      <emptySentence></emptySentence>
      <translateEmptySentence>false</translateEmptySentence>

      <pageProvider name="activity_stream_for_actor">
        <property name="actor">#{currentUser.name}</property>
        <property name="locale">#{localeSelector.locale}</property>
      </pageProvider>
      <showPageSizeSelector>false</showPageSizeSelector>
      <showRefreshCommand>false</showRefreshCommand>
      <useGlobalPageSize>false</useGlobalPageSize>
      <cacheKey>only_one_cache</cacheKey>
      <cacheSize>1</cacheSize>
      <resultLayouts>
        <layout name="user_activity_stream" showCSVExport="false"
          showPDFExport="false" />
      </resultLayouts>
    </contentView>

  </extension>

</component>
