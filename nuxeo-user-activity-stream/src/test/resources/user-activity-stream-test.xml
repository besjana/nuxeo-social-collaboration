<component name="org.nuxeo.ecm.survey.test">

  <extension target="org.nuxeo.ecm.core.persistence.PersistenceComponent"
		point="hibernate">
		<hibernateConfiguration name="nxactivities">
		  <properties>
        <property name="hibernate.connection.url">jdbc:h2:target/test/h2/activities</property>;
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.auto_commit">true</property>
        <property name="hibernate.connection.pool_size">1</property>;
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>;
        <property name="hibernate.hbm2ddl.auto">update</property>;
        <property name="hibernate.show_sql">false</property>; // true to debug
        <property name="hibernate.format_sql">true</property>;
		   </properties>
		</hibernateConfiguration>
  </extension>

  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
    point="directories">

    <directory name="actorRelationshipKindDirectory" remove="true" />

    <directory name="actorRelationshipKindDirectory">
      <schema>actor_relationship_kind</schema>
      <dbDriver>org.hsqldb.jdbcDriver</dbDriver>
      <dbUrl>jdbc:hsqldb:mem:memid</dbUrl>
      <dbUser>sa</dbUser>
      <dbPassword></dbPassword>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>actor_relationship_kind</table>
      <idField>name</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <createTablePolicy>on_missing_columns</createTablePolicy>
      <substringMatchType>subany</substringMatchType>
    </directory>

    <directory name="actorRelationshipDirectory" remove="true" />

    <directory name="actorRelationshipDirectory">
      <schema>actor_relationship</schema>
      <dbDriver>org.hsqldb.jdbcDriver</dbDriver>
      <dbUrl>jdbc:hsqldb:mem:memid</dbUrl>
      <dbUser>sa</dbUser>
      <dbPassword></dbPassword>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>actor_relationship</table>
      <idField>id</idField>
      <autoincrementIdField>true</autoincrementIdField>
      <createTablePolicy>on_missing_columns</createTablePolicy>
      <substringMatchType>subany</substringMatchType>
    </directory>

  </extension>

  <extension target="org.nuxeo.ecm.social.user.relationship.service.UserRelationshipService"
    point="types">
    <kind group="circle" name="friends" label="%s is friend with %s" />
    <kind group="circle" name="coworkers" label="%s works with %s" />
  </extension>

</component>
