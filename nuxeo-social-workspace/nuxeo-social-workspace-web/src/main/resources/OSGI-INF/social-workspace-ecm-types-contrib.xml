<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.social.workspace.types">

  <require>org.nuxeo.ecm.platform.types</require>

  <extension target="org.nuxeo.ecm.platform.types.TypeService"
    point="types">

    <type id="SocialWorkspace">
      <label>SocialWorkspace</label>
      <icon>/icons/social_workspace.png</icon>
      <bigIcon>/icons/social_workspace_100.png</bigIcon>
      <icon-expanded>/icons/social_workspace_open.png</icon-expanded>
      <category>Collaborative</category>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>social_workspace_heading</layout>
      </layouts>
      <layouts mode="edit">
        <layout>social_workspace_heading</layout>
        <layout>social_workspace</layout>
      </layouts>
      <subtypes>
        <type>Folder</type>
        <type>Article</type>
        <type>File</type>
        <type>Note</type>
      </subtypes>
    </type>

    <type id="Article">
      <label>Article</label>
      <icon>/icons/note.gif</icon>
      <bigIcon>/icons/note_100.png</bigIcon>
      <category>SimpleDocument</category>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
        <layout>article</layout>
        <layout>note</layout>
      </layouts>
      <layouts mode="summary">
        <layout>social_document_summary_layout</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
        <layout>article</layout>
        <layout>note</layout>
        <layout>dublincore</layout>
      </layouts>
      <layouts mode="view">
        <layout>article</layout>
        <layout>note</layout>
      </layouts>
      <layouts mode="fullscreen">
        <layout>fullscreen</layout>
      </layouts>
      <views>
        <view id="fullscreen" value="view_social_workspace_articles" />
        <view id="after-create" value="view_social_workspace_articles"/>
        <view id="edit_article" value="edit_article"/>
      </views>
    </type>

    <type id="NewsItem">
      <label>NewsItem</label>
      <icon>/icons/note.gif</icon>
      <bigIcon>/icons/note_100.png</bigIcon>
      <category>SimpleDocument</category>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
        <layout>news_item</layout>
        <layout>note</layout>
      </layouts>
      <layouts mode="summary">
        <layout>news_item_summary_layout</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
        <layout>news_item</layout>
        <layout>note</layout>
        <layout>dublincore</layout>
      </layouts>
      <layouts mode="view">
        <layout>note</layout>
      </layouts>
      <layouts mode="fullscreen">
        <layout>fullscreen</layout>
      </layouts>
      <views>
        <view id="fullscreen" value="view_social_workspace_news_item" />
        <view id="after-create" value="view_social_workspace_news_item"/>
      </views>
    </type>


    <type id="NewsItemsRoot">
      <label>NewsItemsRoot</label>
      <icon>/icons/news_items_root.png</icon>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
      </layouts>
      <layouts mode="view">
        <layout>heading</layout>
      </layouts>
      <subtypes>
        <type>NewsItem</type>
      </subtypes>
    </type>

    <type id="Workspace">
      <subtypes>
        <type>SocialWorkspace</type>
      </subtypes>
    </type>

    <type id="Folder">
      <subtypes>
        <type>Article</type>
        <type>File</type>
        <type>Note</type>
      </subtypes>
    </type>

    <type id="DashboardSpacesContainer">
      <label>DashboardSpacesContainer</label>
      <icon>/icons/social_workspace.png</icon>
      <bigIcon>/icons/social_workspace_100.png</bigIcon>
      <default-view>view_documents</default-view>
      <views>
      <view id="fullscreen" value="dashboard" />
       <view id="articles" value="articles"/>
       <view id="news_items" value="news_items"/>
      </views>
    </type>

  </extension>

</component>
