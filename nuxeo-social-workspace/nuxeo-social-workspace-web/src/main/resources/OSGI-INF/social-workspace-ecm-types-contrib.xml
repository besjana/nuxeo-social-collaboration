<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.social.workspace.types">

  <require>org.nuxeo.ecm.platform.types</require>

  <extension target="org.nuxeo.ecm.platform.types.TypeService"
    point="types">

    <type id="SocialWorkspace">
      <label>SocialWorkspace</label>
      <icon>/icons/social_workspace.png</icon>
      <bigIcon>/icons/social_workspace_100.png</bigIcon>
      <icon-expanded>/icons/social_workspace_open.png</icon-expanded>
      <category>Collaborative</category>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>social_workspace_heading</layout>
      </layouts>
      <layouts mode="edit">
        <layout>social_workspace_heading</layout>
        <layout>social_workspace</layout>
      </layouts>
      <subtypes>
        <type>Folder</type>
        <type>NewsItem</type>
        <type>Article</type>
        <type>File</type>
        <type>Note</type>
      </subtypes>
      <views>
        <view id="fullscreen" value="view_social_collaboration_dashboard" />
      </views>
    </type>

    <type id="Article">
      <label>Article</label>
      <icon>/icons/note.gif</icon>
      <bigIcon>/icons/note_100.png</bigIcon>
      <category>SimpleDocument</category>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
        <layout>article</layout>
        <layout>note</layout>
      </layouts>
      <layouts mode="summary">
        <layout>summary_layout</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
        <layout>article</layout>
        <layout>note</layout>
        <layout>dublincore</layout>
      </layouts>
      <layouts mode="view">
        <layout>article</layout>
        <layout>note</layout>
      </layouts>
      <layouts mode="fullscreen">
        <layout>fullscreen</layout>
      </layouts>
      <views>
        <view id="fullscreen" value="view_social_wokspace_articles" />
      </views>
    </type>

    <type id="NewsItem">
      <label>NewsItem</label>
      <icon>/icons/note.gif</icon>
      <bigIcon>/icons/note_100.png</bigIcon>
      <category>SimpleDocument</category>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
        <layout>news_item</layout>
        <layout>note</layout>
      </layouts>
      <layouts mode="summary">
        <layout>summary_layout</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
        <layout>news_item</layout>
        <layout>note</layout>
        <layout>dublincore</layout>
      </layouts>
      <layouts mode="view">
        <layout>note</layout>
      </layouts>
      <views>
        <view id="fullscreen" value="view_social_wokspace_news_item" />
      </views>
    </type>


    <type id="Workspace">
      <subtypes>
        <type>SocialWorkspace</type>
      </subtypes>
    </type>

    <type id="Folder">
      <subtypes>
        <type>Article</type>
        <type>NewsItem</type>
        <type>Article</type>
        <type>File</type>
        <type>Note</type>
      </subtypes>
    </type>

  </extension>
</component>
