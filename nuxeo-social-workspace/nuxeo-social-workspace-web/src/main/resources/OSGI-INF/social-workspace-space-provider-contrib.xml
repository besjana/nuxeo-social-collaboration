<?xml version="1.0"?>
<component name="org.nuxeo.ecm.social.workspace.spaceprovider">

  <require>org.nuxeo.ecm.user.center.dashboard.opensocial.spaceprovider</require>

  <extension target="org.nuxeo.ecm.spaces.core.spacemanager.service"
    point="spaceProviders">
    <spaceProvider name="socialWorkspacePrivateDashboardSpaceProvider">
      <class>
        org.nuxeo.ecm.social.workspace.spaces.SocialWorkspacePrivateSpaceProvider
      </class>
    </spaceProvider>

    <spaceProvider name="socialWorkspacePublicDashboardSpaceProvider">
      <class>
        org.nuxeo.ecm.social.workspace.spaces.SocialWorkspacePublicSpaceProvider
      </class>
    </spaceProvider>

    <spaceProvider name="defaultDashboardSpaceProvider">
      <class>
        org.nuxeo.ecm.social.workspace.spaces.SocialWorkspaceDefaultSpaceProvider
      </class>
    </spaceProvider>

     <spaceProvider name="globalDashboardSpaceProvider">
      <class>
        org.nuxeo.ecm.social.workspace.spaces.GlobalDashboardSpaceProvider
      </class>
    </spaceProvider>

  </extension>

</component>
