<?xml version="1.0"?>
<component name="org.nuxeo.ecm.social.workspace.content.template">

  <require>org.nuxeo.ecm.platform.content.template.service.ContentTemplateService.defaultContrib
  </require>

  <extension
    target="org.nuxeo.ecm.platform.content.template.service.ContentTemplateService"
    point="factoryBinding">
    <factoryBinding name="CommunityFactory" factoryName="SimpleTemplateFactory"
      targetType="SocialWorkspace">
      <template>
        <templateItem typeName="SocialPublication" id="PublicationSection"
          title="Publication" description="Publication space" />
        <templateItem typeName="SocialPublication" id="News"
          title="PrivateNews" description="Private publication space"
          path="PublicationSection" />
        <templateItem typeName="Section" id="PublicNews"
          title="PublicNews" description="Public publication space"
          path="PublicationSection/News">
          <acl>
            <ace principal="Everyone" permission="Read" granted="true" />
          </acl>
        </templateItem>
      </template>
    </factoryBinding>
  </extension>

</component>
