    /* search box */
    input.searchBox { font: 11px 'Lucida Grande',Verdana,Arial,sans-serif; padding: 1px 3px 0 1px }
    
    /* STYLES SEARCH FIELD */
    .customSearchBox { float: right }
    .customSearchBox form { margin: 0 10px 0 0 }
    .customSearchBox .wideDefinition { border: 1px solid #ccc; padding: 2px 0 2px 2px }
    .customSearchBox .searchBox { background: none transparent; border: none; width:Â 105px }
    .customSearchBox .button {background: transparent url(custom_search.png) no-repeat left center; border:none; cursor: pointer; width: 20px }
    
    /* Tooltips */
    
    a.button { text-decoration: none; position: relative }
    a.disabled { cursor: default }
    .tooltip { text-decoration: none; margin-left: -999em; position: absolute; background-color: #f9f9f9; border: 1px solid #ccc; border-radius: 3px; color: #333; padding: 5px 5px 5px 23px !important }
    a.button:hover .tooltip { text-decoration: none; box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1); font-family: Lucida,Geneva,sans-serif; right: 1em; margin-left: 0; position: absolute; top: 1em; width: 120px; z-index: 999 }
    
    /* Clear */
    .clear { clear:both }
  </style>

